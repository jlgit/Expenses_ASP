@{
    ViewData["Title"] = "Expenses";
}

@model SpendSmart.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create/Edit Expenses</h1>
</div>
<form asp-action="CreateEditExpenseForm" asp-controller="Home" method="post">
    <input type="hidden" asp-for="Id" />
    <label class="mt-4">Value</label>
    <input class="form-control" type="number" name="Amount" placeholder="0" asp-for="Amount" />
    <label class="mt-4">Description</label>
    <input class="form-control" type="text" name="Description" placeholder="Description" asp-for="Description" />
    <button type="submit" class="btn btn-primary mt-4">Save</button>
</form>